{
  "mcpServers": {
    "agent-memory": {
      "command": "mise",
      "args": [
        "exec",
        "node@latest",
        "--",
        "npx",
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "env": {
        "MEMORY_FILE_PATH": "/Users/nano/.claude/agent-memory.json"
      },
      "alwaysAllow": true
    },
    "project-memory": {
      "command": "mise",
      "args": [
        "exec",
        "node@latest",
        "--",
        "npx",
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "env": {
        "MEMORY_FILE_PATH": "./project-memory.json"
      },
      "alwaysAllow": true
    },
    "fetch": {
      "command": "mise",
      "args": ["exec", "node@latest", "--", "uvx", "mcp-server-fetch"],
      "alwaysAllow": true
    },
    "time": {
      "command": "mise",
      "args": [
        "exec",
        "uv@latest",
        "--",
        "uvx",
        "mcp-server-time",
        "--local-timezone=Asia/Tokyo"
      ],
      "alwaysAllow": true
    }
  }
}
